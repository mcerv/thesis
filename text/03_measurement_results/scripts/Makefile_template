CC = g++
CFLAGS = -g
LFLAGS =
OBJPATH = obj
SRCPATH = src
EXECUTABLE1 = drf
EXECUTABLE2 = pfr
BOOST =
BOOST_INCLUDES =
INCLUDES =  `root-config --cflags`
LIBS =  `root-config --ldflags --glibs`
OBJECTS = $(OBJPATH)/drawfuns.o
OBJMAIN1 = $(OBJPATH)/drf.o
OBJMAIN2 = $(OBJPATH)/pfr.o

all: plotHistos

plotHistos: $(OBJECTS) $(OBJMAIN1) $(OBJMAIN2)
	$(CC) $(LFLAGS) $(LIBS) $(OBJECTS) $(OBJMAIN1) -o $(EXECUTABLE1)
	$(CC) $(LFLAGS) $(LIBS) $(OBJECTS) $(OBJMAIN2) -o $(EXECUTABLE2)

$(OBJPATH)/drawfuns.o: $(SRCPATH)/drawfuns.cpp
	$(CC) $(CFLAGS) $(INCLUDES)  -c $(SRCPATH)/drawfuns.cpp -o $(OBJPATH)/drawfuns.o

$(OBJPATH)/pfr.o: $(SRCPATH)/pfr.cxx
	$(CC) $(CFLAGS) $(INCLUDES)  -c $(SRCPATH)/pfr.cxx -o $(OBJPATH)/pfr.o

$(OBJPATH)/drf.o: $(SRCPATH)/drf.cxx
	$(CC) $(CFLAGS) $(INCLUDES)  -c $(SRCPATH)/drf.cxx -o $(OBJPATH)/drf.o


clean:
	 rm $(OBJPATH)/*.o drf pfr
